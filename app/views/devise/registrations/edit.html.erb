<div class="row">

  <div class="span6 offset3"> 

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "well" }) do |f| %>

    <%= devise_error_messages! %>

    <legend>Edit <%= resource_name.to_s.humanize %></legend>

      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :profile_name, label: 'Your username please' %>
      <%= f.input :email %>
      

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>
          Currently waiting confirmation for: <%= resource.unconfirmed_email %>
        </div>
      <% end %>

      <%= f.input :password, hint: "(leave blank if you don't want to change it)" %>
      
      <%= f.input :password_confirmation %>
      <%= f.input :current_password, hint: "(we need your current password to confirm your changes)" %>

    <div><%= f.button :submit, "Update", class: "btn btn-large btn-block btn-success" %></div>
    
  <% end %>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :delete, class: "well" }) do |f| %>

      <legend>Delete my account</legend>

      <%= f.button :submit, "Delete Account", class: "btn btn-large btn-block btn-danger", data: { confirm: "Are you sure?" } %>

    <% end %>
  
  </div>

</div>